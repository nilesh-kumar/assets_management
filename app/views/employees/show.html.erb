<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:employee_number) %>:</strong></dt>
  <dd><%= @employee.employee_number %></dd>

  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @employee.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:designation) %>:</strong></dt>
  <dd><%= @employee.designation? ? @employee.designation : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:technology) %>:</strong></dt>
  <dd><%= @employee.technology? ? @employee.technology : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:department) %>:</strong></dt>
  <dd><%= @employee.department? ? @employee.department : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:branch) %>:</strong></dt>
  <dd><%= @employee.branch? ? @employee.branch : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:join_date) %>:</strong></dt>
  <dd><%= @employee.join_date? ? @employee.join_date.strftime('%Y %B %d') : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:resign_date) %>:</strong></dt>
  <dd><%= @employee.resign_date? ? @employee.resign_date.strftime('%Y %B %d') : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:transfered_from) %>:</strong></dt>
  <dd><%= @employee.transfered_from? ? @employee.transfered_from : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:transfered_to) %>:</strong></dt>
  <dd><%= @employee.transfered_to? ? @employee.transfered_to : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:email_id) %>:</strong></dt>
  <dd><%= @employee.email_id.nil? ? @employee.email_id : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:email_password) %>:</strong></dt>
  <dd><%= @employee.email_password? ? @employee.email_password : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:skype_id) %>:</strong></dt>
  <dd><%= @employee.skype_id? ? @employee.skype_id : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:skype_password) %>:</strong></dt>
  <dd><%= @employee.skype_password? ? @employee.skype_password : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:pm_tool_id) %>:</strong></dt>
  <dd><%= @employee.pm_tool_id? ? @employee.pm_tool_id : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:pm_tool_password) %>:</strong></dt>
  <dd><%= @employee.pm_tool_password? ? @employee.pm_tool_password : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:pandian_id) %>:</strong></dt>
  <dd><%= @employee.pandian_id? ? @employee.pandian_id : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:pandian_password) %>:</strong></dt>
  <dd><%= @employee.pandian_password? ? @employee.pandian_password : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:wiki_id) %>:</strong></dt>
  <dd><%= @employee.wiki_id? ? @employee.wiki_id : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:wiki_password) %>:</strong></dt>
  <dd><%= @employee.wiki_password? ? @employee.wiki_password : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:sapience_id) %>:</strong></dt>
  <dd><%= @employee.sapience_id? ? @employee.sapience_id : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:sapience_password) %>:</strong></dt>
  <dd><%= @employee.sapience_password? ? @employee.sapience_password : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:helpdesk_id) %>:</strong></dt>
  <dd><%= @employee.helpdesk_id? ? @employee.helpdesk_id : "N/A" %></dd>

  <dt><strong><%= model_class.human_attribute_name(:helpdesk_password) %>:</strong></dt>
  <dd><%= @employee.helpdesk_password? ? @employee.helpdesk_password : "N/A" %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
