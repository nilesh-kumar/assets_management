<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Employee Associations" %></h1>
</div>

<% if @employee_devices and @employee_devices.count > 0 %>
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:emp_no) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:designation) %></th>
      <th><%= model_class.human_attribute_name(:os) %></th>
      <th><%= model_class.human_attribute_name(:associable_name) %></th>
      <th><%= model_class.human_attribute_name(:vendor_name) %></th>
    </tr>
  </thead>
  <tbody>
    <% @employee_devices.map do |employee_device| %>
      <tr>
        <td><%= employee_device.employee.employee_number %></td>
        <td><%= employee_device.employee.name %></td>
        <td><%= employee_device.employee.designation %></td>
        <td><%= employee_device.associable.os + ' ' + employee_device.associable.os_version%></td>
        <td><%= employee_device.associable.name %></td>
        <td><%= employee_device.associable.vendor.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
 <div>
    Record Not Found
  </div >
<% end %>