<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= form_tag employees_path, :method => :get do %>
  <div class="control-group">
    <%= label_tag :search, "Search by Name:", :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :search, params[:search], :class => 'number_field' %>
      <%= submit_tag "Search", :name => nil , :class => 'btn btn-primary'%>
    </div>
  </div>
<% end %>
<%= render 'employees' %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.new joinees', :default => t("helpers.links.new joinees")),
            new_joinees_employees_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.deleted employees', :default => t("helpers.links.deleted employees")),
            deleted_employees_path,
            :class => 'btn btn-primary' %>
