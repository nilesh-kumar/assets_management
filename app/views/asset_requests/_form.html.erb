<%= form_for(@asset_request, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if @asset_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@asset_request.errors.count, "error") %> prohibited this asset_request from being saved:</h2>

      <ul>
      <% @asset_request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :vendor_id, :class => 'control-label'%>
    <div class="controls">
     <%= f.select :vendor_id, options_for_select(Vendor.active_vendors.collect{ |v| [v.name, v.id] }), :prompt => 'Select Vendor' %>
      <span class="error-indicator">*</span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
    <%= f.text_field :title, :class => 'text_field' %>
    <span class="error-indicator">*</span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
    <%= f.text_area :description, :class => 'text_area' %>
    <span class="error-indicator">*</span>
    </div>
  </div>

<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                asset_requests_path, :class => 'btn' %>
</div>
<% end %>
