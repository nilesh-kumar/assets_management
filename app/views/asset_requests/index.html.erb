<div class="page-header">
  <h1>Asset Request List</h1>
</div>

<p><%= link_to 'Request Asset', new_asset_request_path, :class => 'btn btn-primary' %> </p>

<table class="table table-striped table-hover table-condensed">
  <tr>
    <th>Title</th>
    <th>Vendor</th>
    <th colspan="2">Action</th>
  </tr>

<% @asset_requests.each do |asset_request| %>
  <tr>
    <td><%= link_to asset_request.title, asset_request %></td>
    <td><%= link_to asset_request.vendor.name, asset_request.vendor %></td>
    <td><%= link_to 'Edit', edit_asset_request_path(asset_request), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', asset_request, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />
