<div class="page-header">
  <h1><%=t '.title', :default => "Deleted Client Assets" %></h1>
</div>
<%= form_tag deleted_client_assets_path, :method => :get do %>
  <div class="control-group">
    <%= label_tag :search, "Search by Name:", :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :search, params[:search], :class => 'number_field' %>
      <%= submit_tag "Search", :name => nil , :class => 'btn btn-primary'%>
    </div>
  </div>
<% end %>
<%= render 'client_assets' %>
<%= link_to t('.all client assets', :default => t("helpers.links.all client assets")),
            client_assets_path,
            :class => 'btn btn-primary' %>

