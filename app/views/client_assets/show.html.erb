<%- model_class = ClientAsset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:reference_type) %>:</strong></dt>
  <dd><%= @client_asset.referenceable_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reference_name) %>:</strong></dt>
  <dd><%= @client_asset.referenceable.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_name) %>:</strong></dt>
  <dd><%= @client_asset.client_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_manager_id) %>:</strong></dt>
  <dd><%= @client_asset.project_manager.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @client_asset.employee.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:department) %>:</strong></dt>
  <dd><%= @client_asset.department %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              client_assets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_client_asset_path(@client_asset), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              client_asset_path(@client_asset),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
