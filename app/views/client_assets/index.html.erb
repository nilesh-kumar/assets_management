<%- model_class = ClientAsset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= form_tag client_assets_path, :method => :get do %>
  <div class="control-group">
    <%= label_tag :search, "Search by Client Name:", :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :search, params[:search], :class => 'number_field' %>
      <%= submit_tag "Search", :name => nil , :class => 'btn btn-primary'%>
    </div>
  </div>
<% end %>
<%= render 'client_assets' %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_client_asset_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.deleted client assets', :default => t("helpers.links.deleted client assets")),
            deleted_client_assets_path,
            :class => 'btn btn-primary' %>