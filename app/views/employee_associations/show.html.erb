<%- model_class = EmployeeAssociation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:associable_id) %>:</strong></dt>
  <dd><%= @employee_association.associable.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:associable_type) %>:</strong></dt>
  <dd><%= @employee_association.associable_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @employee_association.employee.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:designation) %>:</strong></dt>
  <dd><%= @employee_association.employee.designation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:issue_date) %>:</strong></dt>
  <dd><%= @employee_association.issue_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employee_associations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_association_path(@employee_association), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_association_path(@employee_association),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
