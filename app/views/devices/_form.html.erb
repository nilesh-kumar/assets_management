<%= form_for @device, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h2>
      <ul>
      <% @device.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
      <span class="error-indicator">*</span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vendor_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :vendor_id, @vendors.map { |v| [ v.name, v.id ] }%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :invoice_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :invoice_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :os, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :os, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :os_version, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :os_version, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :warranty, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :warranty, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :provider, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :provider, options_for_select(Device::PROVIDER)%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :scrap, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :scrap, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stock, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :stock, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :faulty, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :faulty, :class => 'check_box' %>
    </div>
  </div>
  <span id="ref_faulty_date">
    <div class="control-group">
      <%= f.label :faulty_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :faulty_date, {:include_blank => true, :default => nil}, :class => 'datetime_select' %>
      </div>
    </div>
   </span>
  <div class="control-group">
    <%= f.label :returned, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :returned, :class => 'check_box' %>
    </div>
  </div>
  <span id="ref_returned_date">
  <div class="control-group">
    <%= f.label :returned_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :returned_date, {:include_blank => true, :default => nil}, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :repaired_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :repaired_date, {:include_blank => true, :default => nil}, :class => 'datetime_select' %>
    </div>
  </div>
  </span>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                devices_path, :class => 'btn' %>
  </div>
<% end %>
